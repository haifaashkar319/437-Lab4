@model List<LibraryManagement.ViewModels.LoanListViewModel>

@{
    ViewData["Title"] = "Loans";
}

<h1>Loans</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Loan</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Book</th>
            <th>Borrower</th>
            <th>Loan Date</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var loan in Model)
    {
        <tr>
            <td>@loan.BookTitle</td>
            <td>@loan.BorrowerName</td>
            <td>@loan.LoanDate.ToShortDateString()</td>
            <td>@loan.DueDate.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@loan.LoanId">Details</a> |
                <a asp-action="Edit" asp-route-id="@loan.LoanId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@loan.LoanId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

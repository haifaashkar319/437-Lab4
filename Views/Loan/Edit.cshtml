@model LibraryManagement.ViewModels.LoanEditViewModel

@{
    ViewData["Title"] = "Edit Loan";
}

<h1>Edit Loan</h1>
<hr />

<form asp-action="Edit">
    <input type="hidden" asp-for="LoanId" />

    <div class="form-group">
        <label asp-for="BookId">Book</label>
        <select asp-for="BookId" class="form-control" asp-items="Model.Books"></select>
    </div>

    <div class="form-group">
        <label asp-for="BorrowerId">Borrower</label>
        <select asp-for="BorrowerId" class="form-control" asp-items="Model.Borrowers"></select>
    </div>

    <div class="form-group">
        <label asp-for="LoanDate"></label>
        <input asp-for="LoanDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" />
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

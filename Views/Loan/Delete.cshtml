@model LibraryManagement.ViewModels.LoanDeleteViewModel

@{
    ViewData["Title"] = "Delete Loan";
}

<h1>Delete Loan</h1>
<hr />
<h3>Are you sure you want to delete this loan?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.BookTitle</dd>

        <dt class="col-sm-2">Borrower</dt>
        <dd class="col-sm-10">@Model.BorrowerName</dd>

        <dt class="col-sm-2">Loan Date</dt>
        <dd class="col-sm-10">@Model.LoanDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="LoanId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

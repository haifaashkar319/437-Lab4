@model LibraryManagement.ViewModels.LoanDeleteViewModel

@{
    ViewData["Title"] = "Delete Loan";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Are you sure you want to delete this loan?</h5>

                    <dl class="row mb-4">
                        <dt class="col-sm-3">Book</dt>
                        <dd class="col-sm-9">@Model.BookTitle</dd>

                        <dt class="col-sm-3">Borrower</dt>
                        <dd class="col-sm-9">@Model.BorrowerName</dd>

                        <dt class="col-sm-3">Loan Date</dt>
                        <dd class="col-sm-9">@Model.LoanDate.ToShortDateString()</dd>

                        <dt class="col-sm-3">Due Date</dt>
                        <dd class="col-sm-9">@Model.DueDate.ToShortDateString()</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="LoanId" />
                        <div class="d-flex">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model LibraryManagement.ViewModels.LoanCreateViewModel

@{
    ViewData["Title"] = "Create Loan";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label">Book</label>
                            <select asp-for="BookId" asp-items="Model.Books" class="form-control"></select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BorrowerId" class="form-label">Borrower</label>
                            <select asp-for="BorrowerId" asp-items="Model.Borrowers" class="form-control"></select>
                            <span asp-validation-for="BorrowerId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoanDate" class="form-label">Loan Date</label>
                            <input asp-for="LoanDate" type="date" class="form-control" />
                            <span asp-validation-for="LoanDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">Due Date</label>
                            <input asp-for="DueDate" type="date" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@model LibraryManagement.ViewModels.BookDetailViewModel

@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@model IEnumerable<LibraryManagement.ViewModels.BorrowerListViewModel>
@{
    ViewData["Title"] = "Borrowers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Borrowers</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.BorrowerId" class="btn btn-outline-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.BorrowerId" class="btn btn-outline-warning btn-sm mx-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.BorrowerId" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

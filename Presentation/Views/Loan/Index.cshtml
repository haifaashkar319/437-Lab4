@model List<Presentation.ViewModels.LoanListViewModel>

@{
    ViewData["Title"] = "Loans";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <a asp-action="Create" class="btn btn-success">Create New Loan</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Book</th>
                                    <th>Borrower</th>
                                    <th>Loan Date</th>
                                    <th>Due Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var loan in Model)
                                {
                                    <tr>
                                        <td>@loan.BookTitle</td>
                                        <td>@loan.BorrowerName</td>
                                        <td>@loan.LoanDate.ToShortDateString()</td>
                                        <td>@loan.DueDate.ToShortDateString()</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@loan.LoanId" class="btn btn-info btn-sm">Details</a>
                                            <a asp-action="Edit" asp-route-id="@loan.LoanId" class="btn btn-warning btn-sm ms-1">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@loan.LoanId" class="btn btn-danger btn-sm ms-1">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
